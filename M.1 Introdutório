8-
a=float(input('Digite nº a:'))
b=float(input('Digite nº b:'))
c=float(input('Digite nº c:'))
delta=(b*b-4*c*a)
if a == 0:
    print('a deve ser diferente de zero')
elif delta <0:
    print('Raiz inexistente')
else:
    bha1=(-b+(delta)**(1/2))/2*a
    bha2=(-b-(delta)**(1/2))/2*a
    print(bha1)
    print(bha2)

