C- 
p=str(input('Digite uma palavra:'))
m=p.upper()
print(m)
print(m[::-1])
l=['A','E','I','O','U']
for x in m:
    if str(x) == [l] :
        continue
    print(x)

10-
divida=float(input('Valor da dívida:'))
taxa=float(input('Valor do juros:'))
pagamento=float(input('Quando pagará por mês?'))
mes=1
if (divida*(taxa/100)> pagamento):
    print('Valor muito baixo!')
else:
    saldo = divida
    juros_pago=0
    while saldo >= pagamento:
        juros = saldo * (taxa/100)
        saldo = saldo + juros - pagamento
        juros_pago = juros_pago + juros
        print('Saldo da divida do mês %d é de R$%6.2f' %(mes,saldo))
        mes+=1
    print('Para pagar a divida de R$%6.2f, a %.f %% de juros'%(divida, taxa))
    print('São necessarios, %d meses, pagando um total de R$%6.2f de juros' %(mes-1, juros_pago))
    print('Saldo residual de %6.2f a pagar'%(saldo))

