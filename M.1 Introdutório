    print('a deve ser diferente de zero')
elif delta <0:
    print('Raiz inexistente')
else:
    bha1=(-b+(delta)**(1/2))/2*a
    bha2=(-b-(delta)**(1/2))/2*a
    print(bha1)
    print(bha2)

